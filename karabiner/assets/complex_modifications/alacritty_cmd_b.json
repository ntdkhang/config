{
    "title": "Command b to <space>xb in Alacritty",
    "rules": [
        {
            "manipulators": [
                {
                    "description": "Command b to <Space>xb for xcodebuild",
                    "conditions": [
                        {
                            "bundle_identifiers": [
                                "^io.alacritty",
                                "^org.alacritty"
                            ],
                            "type": "frontmost_application_if"
                        }
                    ],
                    "from": {
                        "key_code": "b",
                        "modifiers": {
                            "mandatory": [
                                "command"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "spacebar"
                        },
                        {
                            "key_code": "x"
                        },
                        {
                            "key_code": "b"
                        }
                    ],
                    "type": "basic"
                }
            ]
        }
}


